           http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="init-user-admin" author="dominik">
        <preConditions onFail="MARK_RAN">
                <tableExists tableName="users"/>
        </preConditions>

        <insert tableName="users">
            <column name="id" valueNumeric="1"/>
            <column name="username" value="admin"/>
            <column name="full_name" value="admin user"/>
            <column name="email" value="admin@gmail.com"/>
            <column name="password" value="admin123"/>
            <column name="role" value="ADMIN"/>
            <column name="active" valueBoolean="true"/>
        </insert>
    </changeSet>

    <changeSet id="init-categories" author="dominik">
        <preConditions onFail="MARK_RAN">
                <tableExists tableName="categories"/>
        </preConditions>

        <insert tableName="categories">
            <column name="id" valueNumeric="1"/>
            <column name="name" value="Sport"/>
            <column name="description" value="Sport related items"/>
        </insert>

        <insert tableName="categories">
            <column name="id" valueNumeric="2"/>
