<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
           http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="create-article-versions-table" author="system">

        <createTable tableName="article_versions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="article_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="content" type="CLOB">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="version_number" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="created_by" type="BIGINT"/>
        </createTable>

        <addUniqueConstraint
                tableName="article_versions"
                columnNames="article_id, version_number"
                constraintName="uk_article_versions_article_version"/>

        <addForeignKeyConstraint
                baseTableName="article_versions"
                baseColumnNames="article_id"
                referencedTableName="articles"
                referencedColumnNames="id"
                constraintName="fk_article_versions_article"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="article_versions"
                baseColumnNames="created_by"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_article_versions_created_by"/>
    </changeSet>

</databaseChangeLog>
